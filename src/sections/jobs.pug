section(id='jobs').section.jobs
      .container.container--jobs
        h2.h2.jobs__headline Мои работы
        
        
        
        
        .jobs__content(v-if="works.length>0")
          .jobs__slider
           
            .jobs__preview
              .jobs__number-box
                span.jobs__number {{currentIndex+1}}
              img(:src="url+works[currentIndex].photo" class = "bigPreview")
              
              
              ul.jobs__small-previews
                work(v-for = "job in works" :iindex = "currentIndex" :job="job" :index = "works.indexOf(job)" @clickemmited = "previewSelect" )
                
                  
              
                  
               
              
              .jobs__arrows
                button(@click = "buttonUp").jobs__arrow.jobs__arrow--up
                button(@click = "buttonDown").jobs__arrow.jobs__arrow--down 
              
                
          .jobs__description 
            ul.tech-list
              tag( :tag = "tag" v-for ="tag in techArray")
            h2.h2.jobs__headline.jobs__headline--description-list  {{works[currentIndex].title}}
            p.jobs__paragraph {{works[currentIndex].description}}
            a(:href="works[currentIndex].link").jobs__link 
             +icon('link', 'jobs__icon-link')
             span.jobs__link Посмотреть сайт

script#tag(type = "x-template")
  li.tech-list__item {{tag}}
    

script#work(type = "x-template")

  li(@click = "selectPreview"  :index = "index" :iindex="iindex" :class="{active: this.index === this.iindex }").jobs__small-preview
    
    
    
    button().jobs__button
      img(:src="url+job.photo" class = "smallPreview" )
      

